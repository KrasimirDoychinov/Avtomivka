@model IEnumerable<Avtomivka.A.Data.Models.Program>

<div class="row align-items-center justify-content-center">
    <div class="col-3">
        <hr class="bg-dark" />
        <table class="table table-striped table-hover border">
            <thead class="thead-dark">
                <tr class="">
                    <th scope="col">Name and price</th>
                    <th scope="col">Description</th>
                    <th scope="col">Modified</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a asp-area="Administration" asp-controller="Program" asp-action="EditProgram" asp-route-id="@item.Id" class="text-decoration-none">@item.Name, @item.Price lv.</a></td>
                        <td>@(item.Description.Length >= 25 ? item.Description.Substring(0, 25) : item.Description)</td>
                        <td>@item.Modified_17118057</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<hr class="bg-dark" />
<div>
    <a asp-area="Administration" asp-controller="Program" asp-action="CreateProgram" class="btn btn-success btn ml-2">Create</a>
</div>