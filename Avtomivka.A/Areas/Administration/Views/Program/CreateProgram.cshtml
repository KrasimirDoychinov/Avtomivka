@model ProgramInput

<div class="row align-items-center justify-content-center">
    <div class="col-7">
        <form method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="Name" class="font-weight-bold "></label>
                <input asp-for="Name" class="form-control  border border-dark" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="font-weight-bold"></label>
                <input asp-for="Price" type="number" class="form-control border border-dark" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="font-weight-bold "></label>
                <textarea asp-for="Description" class="form-control border border-dark" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <hr class="bg-dark" />
            <input type="submit" class="btn btn-success" value="Create" />

        </form>
    </div>
</div>


