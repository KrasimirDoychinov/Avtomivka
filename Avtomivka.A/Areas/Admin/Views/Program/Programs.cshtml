@model IEnumerable<Avtomivka.A.Data.Models.Program>

<div>
    <table class="table bg-light table-bordered">
        <thead>
            <tr>
                <th>Name and price</th>
                <th>Description</th>
                <th>Modified</th>
                <th>Created</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><a asp-area="Admin" asp-controller="Program" asp-action="EditProgram" asp-route-id="@item.Id" class="text-decoration-none">@item.Name, @item.Price lv.</a></td>
                    <td>@(item.Description.Length >= 25 ? item.Description.Substring(0, 25) + "..." : item.Description)</td>
                    <td>@item.Modified_17118057</td>
                    <td>@item.Created</td>
                    <td><a asp-area="Admin" asp-controller="Program" asp-action="DeleteProgram" asp-route-id="@item.Id" class="text-center"></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-area="Admin" asp-controller="Program" asp-action="CreateProgram" class="form-button btn">Create</a>