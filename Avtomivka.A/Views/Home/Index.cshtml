@model HomePageVM
@inject UserManager<User> userManager
@{
    var userId = this.userManager.GetUserAsync(this.User).Result?.Id;
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h2 class="display-4">Welcome to <span class="font-weight-bold">CHISTACHITE</span></h2>
</div>

<div class="row text-center align-items-center justify-content-center">
    @if (Model.Colons.Count() > 0)
    {
        foreach (var item in Model.Colons)
        {
            {
                var boxClass = item.Taken ? "box-taken" : "box";
                if (boxClass == "box")
                {
                    <a class="col-3 @boxClass text-decoration-none"
                       asp-area="" asp-controller="WashReservation" asp-action="CreateReservation" asp-route-colonId="@item.Id">
                        <h3>@item.Number</h3>
                    </a>
                }
                else
                {
                    boxClass = item.UserId == userId ? "box-taken-user" : "box-taken";
                    if (boxClass == "box-taken-user")
                    {
                        <a class="col-3 @boxClass text-decoration-none"
                           asp-area="" asp-controller="WashReservation" asp-action="EditReservation" asp-route-colonId="@item.Id" asp-route-reservationId="@item.">
                            <h3>@item.Number</h3>
                        </a>
                    }
                    else
                    {
                        <div class="col-3 @boxClass">
                            <h3>@item.Number</h3>
                        </div>
                    }
                }

            }
        }
    }
</div>

<hr class="bg-dark" />
